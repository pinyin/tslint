{
  "name": "@pinyin/tslint",
  "version": "0.0.1",
  "description": "TSLint rules",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "js",
    "ts"
  ],
  "sideEffects": false,
  "scripts": {
    "prepublishOnly": "rm -rf dist && npx tsc",
    "test": "npx tsc && npx tslint --test tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pinyin/tslint.git"
  },
  "keywords": [
    "react",
    "tslint"
  ],
  "author": "Bo Bao <bob432091@gmail.com> (https://github.com/pinyin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pinyin/tslint/issues"
  },
  "homepage": "https://github.com/pinyin/tslint#readme",
  "devDependencies": {
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@pinyin/maybe": "^0.0.8",
    "@pinyin/types": "^0.0.38",
    "@types/node": "^10.5.2",
    "tslib": "^1.9.3"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "verbose": true,
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    }
  }
}
