{
  "compilerOptions": {
    "outDir": "js",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "js",
    "strict": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "downlevelIteration": true,
    "noErrorTruncation": true,
    "lib": [
      "es6",
      "es2016.array.include"
    ]
  },
  "include": [
    "ts"
  ]
}
